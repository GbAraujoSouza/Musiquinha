generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(uuid())
  email         String          @unique
  hash          String
  salt          String
  name          String
  isArtist      Boolean         @default(false)
  artist        Artist?         @relation("UserArtist")
  songs         Song[]          @relation("UserSongs")
  playlists     Playlist[]      @relation("UserPlaylists")
  listenHistory ListenHistory[]
}

model Artist {
  userId String @id @unique
  user   User   @relation("UserArtist", fields: [userId], references: [id])

  albuns Album[] @relation("ArtistAlbum")
  songs  Song[]
}

model Song {
  id       String @id @default(uuid())
  title    String
  artist   User   @relation("UserSongs", fields: [artistId], references: [id])
  artistId String
  url      String
  duration Int

  album   Album  @relation("SongAlbum", fields: [albumId], references: [id])
  albumId String

  playlists     Playlist[]
  listenHistory ListenHistory[]
  Artist        Artist?         @relation(fields: [artistUserId], references: [userId])
  artistUserId  String?
}

model Album {
  id    String @id @default(uuid())
  title String

  artist   Artist @relation("ArtistAlbum", fields: [artistId], references: [userId])
  artistId String

  songs Song[] @relation("SongAlbum")
}

model ListenHistory {
  id         String   @id @default(uuid())
  songId     String
  song       Song     @relation(fields: [songId], references: [id])
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  listenedAt DateTime
}

model Playlist {
  id     String @id @default(uuid())
  name   String
  description String

  user   User   @relation("UserPlaylists", fields: [userId], references: [id])
  userId String
  songs  Song[]
}
